    const chatBody = document.getElementById("chat-body");
    const userInput = document.getElementById("user-input");

    function generateMessage(text, isUser) {
        const message = document.createElement("div");
        message.classList.add("message");
        if (isUser) {
            message.classList.add("user-message");
            message.innerHTML = `<p>${text}</p>`;
        } else {
            message.classList.add("bot-message");
            message.innerHTML = `
                <img src="https://placeholder.com/40Ã—40/ff7f7f/Angel" alt="Avatar" class="avatar">
                <p>${text}</p>
            `;
        }
        chatBody.appendChild(message);
        chatBody.scrollTop = chatBody.scrollHeight;
    }

    function handleUserInput() {
        const userText = userInput.value.trim();
        if (userText !== "") {
            generateMessage(userText, true);
            setTimeout(() => {
                const response = getResponse(userText);
                generateMessage(response, false);
            }, 500);
            userInput.value = "";
        }
    }

    function getResponse(userText) {
        const lowerCaseText = userText.toLowerCase();
        for (const key in responses) {
            if (lowerCaseText.includes(key)) {
                return responses[key];
            }
        }
        return responses["default"];
    }

    document.getElementById("send-btn").addEventListener("click", handleUserInput);
</script>

